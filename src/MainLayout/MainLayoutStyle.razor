@namespace Skclusive.Material.Layout
@inherits StyleComponentBase

.MainLayout-Root {
    height: 100%;
    padding-top: 56px;
    padding-left: 0px;
    transition: padding-left 225ms cubic-bezier(0, 0, 0.2, 1) 0ms;
}

@media (min-width: 600px) {
    .MainLayout-Root {
        padding-top: 64px;
    }
}

.MainLayout-ShiftContent {
    padding-left: 240px;
}

.MainLayout-Content {
    height: 100%;
    overflow: hidden;
}